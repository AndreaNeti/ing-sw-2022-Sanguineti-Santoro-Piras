                    <Insets bottom="10.0" left="150.0" right="150.0" top="10.0"/>
                </VBox.margin>
            </TextField>
            <Button fx:id="connectButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="86.0"
                    text="Connect"/>
        </VBox>
        <VBox fx:id="nickName" alignment="CENTER" visible="false">
            <TextField fx:id="inputNickName" alignment="CENTER" prefWidth="201.0" promptText="Inserti nickName"
                       text="nickName">
                <VBox.margin>
                    <Insets bottom="10.0" left="150.0" right="150.0" top="10.0"/>
                </VBox.margin>
            </TextField>
            <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="111.0" text="Enter NickName"/>
        </VBox>
        <AnchorPane id="selectMatch" layoutX="67.0" layoutY="-7.0" prefHeight="530.0" prefWidth="439.0">
            <children>
                <RadioButton layoutX="278.0" layoutY="162.0" mnemonicParsing="false" style="-fx-font-weight: bold;"
