<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0"
           prefWidth="700.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="it.polimi.ingsw.Client.View.Gui.SceneController.MenuController">
    <ImageView fitHeight="700.0" fitWidth="700.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@Graphical_Assets/logo.jpg"/>
        </image>
    </ImageView>
    <Group fx:id="main">
        <VBox fx:id="connect" alignment="CENTER" visible="false">
            <TextField fx:id="inputIp" alignment="CENTER" prefWidth="201.0" promptText="Insert Ip"
                       text="localhost">
